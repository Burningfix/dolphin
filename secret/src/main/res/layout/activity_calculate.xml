<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calculate_number_7"
                style="@style/Calculate"
                android:text="7" />

            <TextView
                android:id="@+id/calculate_number_4"
                style="@style/Calculate"
                android:text="4" />

            <TextView
                android:id="@+id/calculate_number_1"
                style="@style/Calculate"
                android:text="1" />

            <TextView
                android:id="@+id/calculate_number_dot"
                style="@style/Calculate"
                android:text="." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calculate_number_8"
                style="@style/Calculate"
                android:text="8" />

            <TextView
                android:id="@+id/calculate_number_5"
                style="@style/Calculate"
                android:text="5" />

            <TextView
                android:id="@+id/calculate_number_2"
                style="@style/Calculate"
                android:text="2" />

            <TextView
                android:id="@+id/calculate_number_0"
                style="@style/Calculate"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calculate_number_9"
                style="@style/Calculate"
                android:text="9" />

            <TextView
                android:id="@+id/calculate_number_6"
                style="@style/Calculate"
                android:text="6" />

            <TextView
                android:id="@+id/calculate_number_3"
                style="@style/Calculate"
                android:text="3" />

            <TextView
                android:id="@+id/calculate_number_equal"
                style="@style/Calculate"
                android:text="=" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calculate_number_del"
                style="@style/Calculate"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:longClickable="true"
                android:text="DEL"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/calculate_number_div"
                style="@style/Calculate"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="รท" />

            <TextView
                android:id="@+id/calculate_number_mul"
                style="@style/Calculate"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="*" />

            <TextView
                android:id="@+id/calculate_number_add"
                style="@style/Calculate"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+" />

            <TextView
                android:id="@+id/calculate_number_sub"
                style="@style/Calculate"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="-" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/num"
        android:layout_alignParentTop="true"
        android:gravity="right|center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="0"
        android:textColor="#707070"
        android:textSize="28sp" />
</RelativeLayout>
